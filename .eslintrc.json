{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["jsx-a11y", "import", "react"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".js"] }],
    "import/prefer-default-export": "off",
    "no-console": "off",
    "import/no-cycle": "off"
  }
}
